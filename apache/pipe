pipeline {
  agent any
  stages {
   stage("create clone"){
            steps{
                git credentialsId: 'GIT', url: 'https://github.com/SIVAKUMAR1893/DOCKER_TUTORIAL.git'
            }
        }
    stage("build") {
      steps {
        sh "docker build -t apache ."
      }
    }
    stage("run") {
      steps {
        sh """
          docker run --rm apache:latest
        """
      }
    }
  }
}
